import sys
from PySide6.QtWidgets import QApplication, QLabel, QPushButton, QVBoxLayout, QWidget

# 1. Crea la aplicación (es obligatoria, solo puede haber una por programa)
app = QApplication(sys.argv)

# 2. Crea la ventana principal
window = QWidget()
window.setWindowTitle("Mi ventana con botones")

# 3. Crea los widgets
button1 = QPushButton("OPCIÓN 1")
button2 = QPushButton("OPCIÓN 2")
label = QLabel("¡Elige uno de los dos botones!")

# 4. Función que cambia el texto
def cambiar_texto(texto):
    label.setText(texto)

# 5. Conecta cada botón usando lambda para pasar el texto
button1.clicked.connect(lambda: cambiar_texto("¡HOLA!"))
button2.clicked.connect(lambda: cambiar_texto("¡CHAU!"))

# 6. Crea un layout y añade los widgets
layout = QVBoxLayout()
layout.addWidget(label)
layout.addWidget(button1)
layout.addWidget(button2)

# 7. Asigna el layout a la ventana
window.setLayout(layout)

# 8. Muestra la ventana
window.show()

# 9. Mantiene la aplicación abierta
app.exec()
